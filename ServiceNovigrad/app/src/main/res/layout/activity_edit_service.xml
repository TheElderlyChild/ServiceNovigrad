<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditServiceActivity">

    <TextView
        android:id="@+id/instrDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Choose a name for the service, then specify the information and documents for the service (Case Sensitive)" />

    <EditText
        android:id="@+id/editServiceName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Enter Name of Service" />

    <Button
        android:id="@+id/btnSelectService"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:ems="10"
        android:text="Select/Create"/>

    <Spinner
        android:id="@+id/availableDocs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_dropdown"
        android:ems="10"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btnChooseDocs"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:ems="10"
        android:text="Choose Document"/>
    <Spinner
        android:id="@+id/chosenDocs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_dropdown"
        android:ems="10"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btnRemoveDocs"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:ems="10"
        android:text="Remove Document"/>
    <Spinner
        android:id="@+id/availableFields"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_dropdown"
        android:ems="10"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btnAddFields"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:ems="10"
        android:text="Add Field"/>
    <Spinner
        android:id="@+id/chosenFields"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_dropdown"
        android:ems="10"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btnRemoveFields"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:ems="10"
        android:text="Remove Field"/>

</LinearLayout>